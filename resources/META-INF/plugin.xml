<idea-plugin version="7">
    <id>com.zcolin.zplug</id>
    <name>ZPlug</name>
    <version>1.0</version>
    <vendor email="57521534@qq.com" url="https://github.com/zcolin">GitHub</vendor>

    <idea-version since-build="141.0"/>
    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <group id="ZAction.Zplug" text="_Zplug" popup="true">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <action id="ZFindViewAction" class="findviewbyid.actions.FindViewByIdFromJavaAction" text="ZFindView"
                    description="ZFindViewAction">
            </action>
            <action id="ZFindViewFromXMLAction" class="findviewbyid.actions.FindViewByIdFromXmlAction" text="ZFindViewFromXML"
                    description="ZFindViewFromXMLAction">
            </action>
            <action id="ZRecyclerViewAction" class="zrecyclerview.ZRecyclerViewAction" text="ZRecyclerView"
                    description="ZRecyclerViewAction">
            </action>
        </group>
    </actions>
</idea-plugin>